<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Computools WS</title>
</head>
<body>
    <h1 style="background-color: #000; color: #fff;">WS connection status: <b id="WsConnectionStatus" style="color: #FF0000;">Disconected</b></h1>
    <h1 id="WS_PORT" style="display: none;">{{WS_PORT}}</h1>
    <h1 id="WS_HOST" style="display: none;">{{WS_HOST}}</h1>
    <script>
        const WS_PORT = document.getElementById('WS_PORT').innerHTML;
        const WS_HOST = document.getElementById('WS_HOST').innerHTML;
        const ws = new WebSocket(`ws://${WS_HOST}:${WS_PORT}`);
        const wsConnectionStatus = document.getElementById('WsConnectionStatus');
        ws.onopen = () => {
            wsConnectionStatus.innerHTML = 'Connected';
            wsConnectionStatus.style.color = '#00FF00';
        };
        ws.onclose = () => {
            wsConnectionStatus.innerHTML = 'Disconected';
            wsConnectionStatus.style.color = '#FF0000';
        };
    </script>
</body>
</html>